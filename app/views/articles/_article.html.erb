<div class="container">

  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">

        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic" id="card-top">
            <% if article.user %>
              by <%= link_to article.user.username, user_path(article.user) %>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title"> <%= link_to article.title, article_path(article),class:"text-success"%> </h5>
            <p class="card-text"> <%= simple_format(article.description)%>  </p>
            <%# <a href="#" class="btn btn-outline-success"> View </a>
        <a href="#" class="btn btn-outline-info"> Edit </a>
        <a href="#" class="btn btn-outline-danger"> Delete </a> %>
            <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
            <% if logged_in? && article.user == current_user %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
              <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>
          </div>
          <div class="card-footer text-muted" id="card-bottom">
            <small class="card-bottom-font"> Created <%= time_ago_in_words(article.created_at) %>  ago, Edited
              <%= time_ago_in_words(article.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
